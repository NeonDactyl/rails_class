<article>
  <header>
    <h2><%= @movie.name %></h2>
  </header>
  <div>
    <h3>Description</h3>
    <p><%= @movie.description %></p>
    <h3>Rating</h3>
    <p><%= @movie.rating %></p>
    <h3>Release Date</h3>
    <p><%= "#{@movie.released_on} (#{time_ago_in_words(@movie.released_on)})" %></p>
    <h3>Box Office Gross</h3>
    <p><%= format_gross(@movie) %></p>
</div>
</article>

<%=  link_to "All Movies", movies_path %> |
<%= link_to "Edit", edit_movie_path(@movie) %> |
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: 'Are you sure?'} %>
