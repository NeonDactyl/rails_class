<%= form_for(@movie) do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :released_on %><br />
    <%= f.date_select :released_on, start_year: 1950 %>
  </p>
  <p>
    <%= f.label :total_gross %><br />
    <%= f.text_field :total_gross %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.submit %> |
    <%= link_to "Cancel", movies_path %>
  </p>
<% end %>
